<odoo>
    <record id="patient_report" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">hms.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_hms_patient"/>
        <field name="binding_type">report</field>
        <field name="report_name">hms.hms_patient_report_template</field>
    </record>

    <template id="hms_patient_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="padding: 20px;">
                        <div class="text-center mb-4">
                            <h2 style="color: #e74c3c;">Patient Status Report</h2>
                        </div>

                        <div class="row" style="border: 2px solid #3498db; padding: 20px; margin-bottom: 20px;">
                            <div class="col-8">
                                <p><strong>Name:</strong> <span t-field="o.first_name"/> <span t-field="o.last_name"/></p>
                                <p><strong>Age:</strong> <span t-field="o.age"/></p>
                                <p><strong>Department:</strong> <span t-field="o.department_id.name"/></p>
                                <p><strong>Doctors:</strong> <span t-esc="o.doctors_ids.first_name"/></p>
                            </div>
                            <div class="col-4 text-right">
                                <img t-if="o.image" t-att-src="image_data_uri(o.image)" style="max-width: 150px; max-height: 150px;"/>                                <p class="mt-2"><strong>Birth date:</strong> <span t-field="o.birthdate"/></p>
                                <p><strong>PCR:</strong> <span t-field="o.pcr"/></p>
                                <p><strong>Blood Type:</strong> <span t-field="o.blood_type"/></p>
                                <p><strong>Email:</strong> <span t-field="o.email"/></p>
                            </div>
                        </div>

                        <h4 class="text-center" style="color: #e74c3c; margin-bottom: 15px;">Log History</h4>
                        <table class="table table-bordered">
                            <thead style="background-color: #3498db; color: white;">
                                <tr>
                                    <th>User</th>
                                    <th>Date</th>
                                    <th>Info</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.log_ids" t-as="log">
                                    <td><span t-field="log.create_uid"/></td>
                                    <td><span t-field="log.create_date"/></td>
                                    <td><span t-field="log.description"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>