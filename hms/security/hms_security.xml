<odoo>
    <data>
        <record id="hms_user_group" model="res.groups">
            <field name="name">Hms General User Group</field>
        </record>
        <record id="hms_manager_group" model="res.groups">
            <field name="name">Hms Manager Group</field>
            <field name="implied_ids" eval="[(4,ref('hms.hms_user_group'))]"/>
        </record>

        <record id="view_created_patient_rule" model="ir.rule">
            <field name="name">View Created Patient Rule</field>
            <field name="model_id" ref="model_hms_patient"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
        </record>

        <record id="view_all_patient_rule" model="ir.rule">
            <field name="name">View Created Patient Rule</field>
            <field name="model_id" ref="model_hms_patient"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('hms.hms_manager_group'))]"/>
        </record>
    </data>
</odoo>