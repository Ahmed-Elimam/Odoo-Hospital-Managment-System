<odoo>
    <data>
        <record id="department_list_view" model="ir.ui.view">
            <field name="name">Department List View</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                    <field name="patient_ids"/>
                </list>
            </field>
        </record>
        <record id="department_form_view" model="ir.ui.view">
            <field name="name">Department Form View</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="Dep Info">
                                <group>
                                    <field name="name"/>
                                    <field name="capacity"/>
                                    <field name="is_opened"/>
                                </group>
                            </page>
                            <page string="Dep Patients">
                                <group>
                                <field name="patient_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="departments_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hms.department</field>
        </record>
        <menuitem id="hms_department_data_menu" name="Departments Data" parent="hms_root" action="departments_action"/>
    </data>
</odoo>