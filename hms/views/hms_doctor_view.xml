<odoo>
    <data>
        <record id="doctors_list_view" model="ir.ui.view">
            <field name="name">Doctor List View</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <list>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="image" widget="image"/>
                </list>
            </field>
        </record>
        <record id="doctors_form_view" model="ir.ui.view">
            <field name="name">Doctor Form View</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="image" widget="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="doctor_action" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="res_model">hms.doctor</field>
        </record>
        <menuitem id="hms_doctors_data_menu" name="Doctors Data" parent="hms_root" action="doctor_action"/>
    </data>
</odoo>